<div class="dialog">
	<%= form_for @user_session, :url => user_session_path, :remote => true do |f| %>
	  <dl>
			<dt><%= f.label :email %></dt><dd><%= f.text_field :email %></dd>
			<dt><%= f.label :password %></dt><dd><%= f.password_field :password %></dd>
		</dl>
	  <%= submit_link "login" %> | <%=link_to "create account", new_user_path, :remote => true %>
	<% end %>
</div>
